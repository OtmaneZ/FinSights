PUSHER_CLUSTER="eu"
NEXT_PUBLIC_PUSHER_KEY="xxxxxxxxxxxxxxxxxx"
NEXT_PUBLIC_PUSHER_CLUSTER="eu"

# Resend (emails transactionnels)
RESEND_API_KEY="re_xxxxxxxxxx"
RESEND_FROM_EMAIL="notifications@finsights.fr"

# ---------------------------------------
# 7. MONITORING & ANALYTICS
# ---------------------------------------
# Sentry (error tracking + performance monitoring)
NEXT_PUBLIC_SENTRY_DSN="https://xxxxxxxxxx@xxxxxxxxxx.ingest.sentry.io/xxxxxxxxxx"
SENTRY_AUTH_TOKEN="sntrys_xxxxxxxxxx"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# PostHog (product analytics)
NEXT_PUBLIC_POSTHOG_KEY="phc_xxxxxxxxxx"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ---------------------------------------
# 8. CONFIGURATION APPLICATIVE
# ---------------------------------------
# URL publique (production)
NEXT_PUBLIC_APP_URL="https://finsights.fr"

# Environnement
NODE_ENV="development"

# API Configuration
API_RATE_LIMIT="100"
API_RATE_WINDOW="900000"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_PWA="true"
