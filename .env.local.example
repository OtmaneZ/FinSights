# ======================================
# FICHIER DE CONFIGURATION LOCALE
# Copier en .env.local et remplir les valeurs
# ======================================

# ---------------------------------------
# 1. DATABASE & AUTHENTICATION
# ---------------------------------------
# PostgreSQL (Vercel Postgres ou autre)
POSTGRES_PRISMA_URL="postgresql://user:password@host:5432/finsights?pgbouncer=true&connection_limit=1"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host:5432/finsights"

# NextAuth.js
NEXTAUTH_SECRET="GENERER_AVEC: openssl rand -base64 32"
NEXTAUTH_URL="http://localhost:3000"

# ---------------------------------------
# 2. SSO / OAUTH PROVIDERS
# ---------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID="xxxxxxxxxxxxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-xxxxxxxxxxxxxxxxxxxxx"

# Microsoft Azure AD OAuth
AZURE_AD_CLIENT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
AZURE_AD_CLIENT_SECRET="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
AZURE_AD_TENANT_ID="common"  # ou ID de tenant spécifique

